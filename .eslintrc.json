{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "extends": [
      "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["import"],
    "rules": {
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
        "global-require": "off",
        "func-names": "warn"
    }
}
